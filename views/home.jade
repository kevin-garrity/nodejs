extends layout

block content
  //include partials/header


  section#banner(style='padding-top:40px;')
    .inner
      h1(style='font-size: 20px; font-weight: bold;')
          | To beat the best, you have to learn from the best
      h1
        | Get personalized feedback from NBA skills development coaches
      img(src='/splash.png')
      hr
      #beta1
        p(style='font-size: 12px; font-weight: bold;') We're launching soon. Sign up to get early access
        form(method='POST', action='submitEmail')
          input(type='hidden', name='_csrf', value=_csrf)
          input(type='hidden', name='ref', id='refdiv')
          input(type='text', placeholder='Email address here', name='emailsubmit', style='width: 50%; display: inline-block; margin: 0; vertical-align: bottom; background: white; color: black;')
          input.button.special(type='submit', value='Go', style='width: 100px; min-width: 0; height: 49px; vertical-align: bottom;')
        //div#lr-widget(rel="FUSYFXDB")
        //script(src="http://ignition.launchrock.com/ignition-current.min.js")
      #beta2(style='display: none;')
        p(style='font-size: 14px; font-weight: bold;') Thanks -- we'll be in touch!

      footer
    
    //a.more.scrolly(href="#main")

  script.
    $("#refdiv").val(document.referrer)
    
    if(document.location.search.match("betasubmitted")){
      $("#beta1").hide();
      $("#beta2").show();
    }
    

  //article#main(style='display: none;')
    section.wrapper.style1.container.special
      .row
        .4u.12u(narrower)
          section
            span.icon.featured.fa-check
              header
                h3
                  | Pro-Level Skills Assessment
                p
                  | Complete our pro-level skills assessment so we can match you with the perfect private coaches.</p>
        .4u.12u(narrower)
          section
            span.icon.featured.fa-mortar-board
              header
                h3
                  | Pick your Coach
                p
                  | Browse through our recommended coaches and select whom you want to start learning from. </p>
        .4u.12u(narrower)
          section
            span.icon.featured.fa-futbol-o
              header
                h3
                  | Train
                p
                  | Start working with your coach through our online video platform and keep track of your progress.</p>
